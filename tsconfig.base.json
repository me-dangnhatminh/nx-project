{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dtutool-ui/*": ["apps/dtutool-ui/src/*"],
      "@schedule-ui/*": ["libs/schedule-ui/src/*"],
      "@shared/types/*": ["libs/shared/types/src/*"],
      "@shared/utils/*": ["libs/shared/utils/src/*"],
      "@shared/utils": ["libs/shared/utils/src"],
      "@shadcn-ui/styles/*": ["libs/shadcn-ui/src/styles/*"],
      "@shadcn-ui/components/*": ["libs/shadcn-ui/src/components/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
